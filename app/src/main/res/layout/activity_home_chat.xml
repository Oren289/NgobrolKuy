<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".HomeChatActivity">

    <ImageView
        android:id="@+id/home_logo_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ngobrolkuy_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/home_logo_ngobrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Ngobrol"
        android:textColor="@color/pink"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/home_logo_icon"
        app:layout_constraintLeft_toRightOf="@+id/home_logo_icon"/>

    <TextView
        android:id="@+id/home_logo_kuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Kuy"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@+id/home_logo_ngobrol"
        app:layout_constraintLeft_toRightOf="@+id/home_logo_ngobrol"/>

    <ImageView
        android:id="@+id/home_menu_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_more_vert_white_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_logo_icon"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_group_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_profile_img_1"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/man"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="24dp"/>

                <TextView
                    android:id="@+id/home_profile_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ilhan"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/home_profile_img_1"
                    app:layout_constraintStart_toEndOf="@id/home_profile_img_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/home_profile_chat_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why am i still here, just to suffer."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/home_profile_img_1"
                    app:layout_constraintTop_toBottomOf="@+id/home_profile_name_1"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.30"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="24dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/home_group_1"
                app:layout_constraintStart_toStartOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_profile_img_2"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/man"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="24dp"/>

                <TextView
                    android:id="@+id/home_profile_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ilhan"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/home_profile_img_2"
                    app:layout_constraintStart_toEndOf="@id/home_profile_img_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/home_profile_chat_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why am i still here, just to suffer."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/home_profile_img_2"
                    app:layout_constraintTop_toBottomOf="@+id/home_profile_name_2"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.30"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="24dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>